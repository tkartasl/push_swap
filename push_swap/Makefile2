NAME = push_swap

SRCS = srcs/push_swap.c\
		array_utils.c \
		make_stack.c \
		rules.c \
		rules_reverse_rotate.c \
		stack_utils.c \
		utils.c 

LIBFT = Libft/

MAKE = make 

FLAGS = -Wall -Wextra -Werror

CC = cc 

all: ${NAME}

${NAME}: 
	${MAKE} all -C ${LIBFT}
	${CC} ${FLAGS} -o ${NAME} ${SRCS} -L Libft/ -lft

clean:
	${MAKE} clean -C ${LIBFT}

fclean: clean
	rm -f ${NAME}
	${MAKE} fclean -C ${LIBFT}

re: fclean all	